{
  "manifest_version": 2,
  "name": "duden",
  "description": "Deutsch Lernen.",
  "version": "0.2.2",
  "icons": {
    "64": "icons/icon.png"
  },
  "background": {
    "scripts": ["background_script.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://www.duden.de/rechtschreibung/*"],
      "js": ["jquery.min.js", "content_script.js"]
    },
    {
      "matches": [
        "https://www.duden.de/*",
        "https://www.mydealz.de/*",
        "https://www.amazon.de/*",
        "https://derjoker.github.io/vocabulary-builder/*"
      ],
      "js": ["dblclick.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_popup": "browserAction/index.html",
    "default_title": "duden"
  },
  "options_ui": {
    "page": "options/index.html"
  },
  "permissions": ["storage"]
}
